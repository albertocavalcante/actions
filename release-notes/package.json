{
  "name": "release-notes-action",
  "version": "1.0.0",
  "description": "Generate beautiful release notes for multi-platform releases",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "keywords": [
    "github-actions",
    "release-notes",
    "changelog"
  ],
  "author": "Alberto Cavalcante",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/glob": "^0.5.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@vercel/ncc": "^0.38.3",
    "typescript": "^5.7.3"
  }
}
