{
  "name": "release-notes-action",
  "version": "1.0.0",
  "description": "Generate beautiful release notes for multi-platform releases",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --license licenses.txt",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "all": "bun run typecheck && bun run lint && bun run build"
  },
  "keywords": [
    "github-actions",
    "release-notes",
    "changelog"
  ],
  "author": "Alberto Cavalcante",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/glob": "^0.5.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^25.0.10",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  }
}
